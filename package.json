{
  "name": "mtxs-bookshop",
  "version": "0.0.1",
  "description": "MTXS Bookshop",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^18"
  },
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^3",
    "@sap-cloud-sdk/http-client": "^3",
    "@sap-cloud-sdk/util": "^3",
    "@sap/cds": "^7",
    "@sap/cds-mtxs": "^1",
    "cfenv": "^1.2.4",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "start:hybrid": "cds build --production && cp gen/srv/resources.tgz . && cds bind --exec cds-serve --profile hybrid",
    "deploy": "cf deploy mta_archives/mtxs-bookshop_0.0.1.mtar -e deployment/free-tier-private.mtaext",
    "deploy:srv": "cf deploy mta_archives/mtxs-bookshop_0.0.1.mtar -e deployment/free-tier-private.mtaext -m mtxs-bookshop-srv",
    "deploy:ui": "cf deploy mta_archives/mtxs-bookshop_0.0.1.mtar -e deployment/free-tier-private.mtaext -m mtxs-bookshop",
    "undeploy": "cf undeploy mtxs-bookshop --delete-service-keys --delete-services --delete-service-brokers"
  },
  "cds": {
    "log": {
      "levels": {
        "mtxs-custom": "debug"
      }
    },
    "requires": {
      "multitenancy": true,
      "toggles": true,
      "extensibility": true,
      "[hybrid]": {
        "auth": {
          "kind": "mocked"
        },
        "db": "hana-mt"
      },
      "[production]": {
        "db": "hana-mt"
      },
      "db": {
        "kind": "sql"
      },
      "cfapi": {
        "kind": "rest",
        "credentials": {
          "destination": "CFAPI"
        },
        "destinationOptions": {
          "selectionStrategy": "alwaysProvider"
        }
      }
    }
  }
}
