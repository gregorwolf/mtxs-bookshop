{
  "name": "mtxs-bookshop",
  "version": "0.0.2",
  "description": "MTXS Bookshop",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^18"
  },
  "files": [
    "db/data-model.cds"
  ],
  "xdependencies": {
    "@sap/xotel-agent-ext-js": "https://73555000100200018064.npmsrv.cdn.repositories.cloud.sap/@sap/xotel-agent-ext-js/-/xotel-agent-ext-js-1.5.8.tgz",
    "@sap/fesr-to-otel-js": "https://73555000100200018064.npmsrv.cdn.repositories.cloud.sap/@sap/fesr-to-otel-js/-/fesr-to-otel-js-1.5.3.tgz"
  },
  "dependencies": {
    "@sap/xotel-agent-ext-js": "https://73555000100200018064.npmsrv.cdn.repositories.cloud.sap/@sap/xotel-agent-ext-js/-/xotel-agent-ext-js-1.5.8.tgz",
    "@sap/fesr-to-otel-js": "https://73555000100200018064.npmsrv.cdn.repositories.cloud.sap/@sap/fesr-to-otel-js/-/fesr-to-otel-js-1.5.3.tgz",
    "@sap-cloud-sdk/connectivity": "^3",
    "@sap-cloud-sdk/http-client": "^3",
    "@sap-cloud-sdk/util": "^3",
    "@sap/cds": "^7",
    "@sap/cds-mtxs": "^1",
    "cfenv": "^1.2.4",
    "express": "^4",
    "hdb": "^0",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.108.15",
    "cds-launchpad-plugin": "^2.0.0",
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "node ${NODE_ARGS} ./node_modules/@sap/cds/bin/cds-serve",
    "start:hybrid": "cds build --production && cp gen/srv/resources.tgz . && cds bind --exec cds-serve --profile hybrid",
    "build": "mbt build && npm install",
    "deploy": "cf deploy mta_archives/mtxs-bookshop_0.0.1.mtar -e cf-service-broker-private.mtaext",
    "deploy:srv": "cf deploy mta_archives/mtxs-bookshop_0.0.1.mtar -e cf-service-broker-private.mtaext -m mtxs-bookshop-srv",
    "deploy:ui": "cf deploy mta_archives/mtxs-bookshop_0.0.1.mtar -e cf-service-broker-private.mtaext -m mtxs-bookshop",
    "undeploy": "cf undeploy mtxs-bookshop --delete-service-keys --delete-services --delete-service-brokers"
  },
  "cds": {
    "log": {
      "levels": {
        "mtxs-custom": "debug"
      }
    },
    "requires": {
      "multitenancy": true,
      "toggles": true,
      "extensibility": true,
      "[hybrid]": {
        "auth": {
          "kind": "mocked"
        },
        "db": "hana-mt"
      },
      "[production]": {
        "db": "hana-mt"
      },
      "db": {
        "kind": "sql"
      },
      "cfapi": {
        "kind": "rest",
        "credentials": {
          "destination": "CFAPI"
        },
        "destinationOptions": {
          "selectionStrategy": "alwaysProvider"
        }
      },
      "srv.external.CatalogService": {
        "kind": "odata",
        "model": "srv/external/CatalogService",
        "credentials": {
          "destination": "CatalogService",
          "path": "/catalog"
        }
      }
    }
  },
  "sapux": [
    "app/books"
  ]
}
