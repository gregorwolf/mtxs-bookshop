### Request Access Token
# @name requestAccessToken
POST {{$dotenv btp_tokenendpoint}}/oauth/token
Accept: application/json
Authorization: Basic {{$dotenv btp_clientid}}:{{$dotenv btp_clientsecret}}
Content-Type: application/x-www-form-urlencoded

grant_type=password
&username={{$dotenv username}}
&password={{$dotenv password}}
&client_id={{$dotenv btp_clientid}}
&response_type=token
#&login_hint={"origin":"sap.custom"}
### Fill Variables from Response
@access_token = {{requestAccessToken.response.body.$.access_token}}
@id_token = {{requestAccessToken.response.body.$.id_token}}
###
GET {{$dotenv service_url}}/odata/v4/catalog
Authorization: Bearer {{access_token}}
###
GET {{$dotenv service_url}}/odata/v4/catalog/$metadata
Authorization: Bearer {{access_token}}
###
GET {{$dotenv service_url}}/odata/v4/catalog/Books
Authorization: Bearer {{access_token}}
###
GET {{$dotenv service_url}}/odata/v4/catalog/Books
  ?$expand=author
Authorization: Bearer {{access_token}}
###
GET {{$dotenv service_url}}/odata/v4/catalog/Books(ID=8c0e80fe-d429-400e-8c20-210e145ab197,IsActiveEntity=true)/author
Authorization: Bearer {{access_token}}
###
GET {{$dotenv service_url}}/odata/v4/catalog/Authors
#  ?$expand=books
Authorization: Bearer {{access_token}}
###
POST {{$dotenv service_url}}/odata/v4/catalog/Books
Authorization: Bearer {{access_token}}
Content-Type: application/json

{
  "ID": 42,
  "title": "Per Anhalter durch die Galaxis",
  "stock": 500
}

###
GET {{$dotenv service_url}}/odata/v4/catalog/CS1TAB
Authorization: Bearer {{access_token}}

###
GET {{$dotenv service_url}}/odata/v4/books-api
Authorization: Bearer {{access_token}}
###
GET {{$dotenv service_url}}/odata/v4/books-api/$metadata
Authorization: Bearer {{access_token}}
###
# @name getBooksFromAPI
GET {{$dotenv service_url}}/odata/v4/books-api/Books
Authorization: Bearer {{access_token}}
###
@bookId={{getBooksFromAPI.response.body.$.value[0].ID}}
### Read Single Book
# @name getBookFromAPI
GET {{$dotenv service_url}}/odata/v4/books-api/Books({{bookId}})
Authorization: Bearer {{access_token}}
###
@etag={{getBookFromAPI.response.headers.ETag}}
### Update Book
PATCH {{$dotenv service_url}}/odata/v4/books-api/Books({{bookId}})
Authorization: Bearer {{access_token}}
If-Match: {{etag}}
Content-Type: application/json

{
  "stock": 650
}
